root = true

# 通用基础
[*]
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true
# charset = utf-8  # 若本地有 CharsetFormatter 问题，可继续注释

[*.cs]
indent_style = space
indent_size = 4

# using 排序与分组
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true
csharp_using_directive_placement = outside_namespace:warning

# 大括号与命名空间风格
csharp_prefer_braces = true:warning
csharp_style_namespace_declarations = file_scoped:warning

# this. 限定（保持你原有偏好）
dotnet_style_qualification_for_field = false:suggestion
dotnet_style_qualification_for_property = false:suggestion
dotnet_style_qualification_for_method = false:suggestion
dotnet_style_qualification_for_event = false:suggestion

# var 三条（偏向 var）
csharp_style_var_for_built_in_types = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = true:suggestion

# 表达式成员（保持你的偏好）
csharp_style_expression_bodied_methods = true:suggestion
csharp_style_expression_bodied_properties = true:suggestion

# null / 条件调用（保持你的偏好并补充）
csharp_style_throw_expression = true:suggestion
csharp_style_conditional_delegate_call = true:suggestion
dotnet_style_null_propagation = true:suggestion
dotnet_style_coalesce_expression = true:suggestion
dotnet_style_prefer_is_null_check_over_reference_equality_method = true:suggestion

# 初始化/简化
dotnet_style_object_initializer = true:suggestion
dotnet_style_collection_initializer = true:suggestion
csharp_style_implicit_object_creation_when_type_is_apparent = true:suggestion
dotnet_style_prefer_simplified_boolean_expressions = true:suggestion
csharp_style_prefer_switch_expression = true:suggestion
csharp_style_pattern_matching_over_is_with_cast_check = true:suggestion
csharp_style_pattern_matching_over_as_with_null_check = true:suggestion
csharp_style_prefer_tuple_swap = true:suggestion
csharp_style_deconstructed_variable_declaration = true:suggestion

# 命名：私有字段一律 _camelCase
dotnet_naming_rule.private_fields_underscore_camel.severity = warning
dotnet_naming_rule.private_fields_underscore_camel.symbols = private_fields
dotnet_naming_rule.private_fields_underscore_camel.style = underscore_camel_style

dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private
# 不再限定 readonly，所有私有字段都命中
# dotnet_naming_symbols.private_fields.required_modifiers =

dotnet_naming_style.underscore_camel_style.capitalization = camel_case
dotnet_naming_style.underscore_camel_style.required_prefix = _

# （可选）接口以 I 开头
dotnet_naming_rule.interfaces_start_with_i.severity = suggestion
dotnet_naming_rule.interfaces_start_with_i.symbols = interfaces
dotnet_naming_rule.interfaces_start_with_i.style = i_prefix_pascal

dotnet_naming_symbols.interfaces.applicable_kinds = interface

dotnet_naming_style.i_prefix_pascal.capitalization = pascal_case
dotnet_naming_style.i_prefix_pascal.required_prefix = I

# （可选）异步方法以 Async 结尾
dotnet_naming_rule.async_methods_end_with_async.severity = suggestion
dotnet_naming_rule.async_methods_end_with_async.symbols = async_methods
dotnet_naming_rule.async_methods_end_with_async.style = end_with_async

dotnet_naming_symbols.async_methods.applicable_kinds = method
dotnet_naming_symbols.async_methods.applicable_accessibilities = *
dotnet_naming_symbols.async_methods.required_modifiers = async

dotnet_naming_style.end_with_async.capitalization = pascal_case
dotnet_naming_style.end_with_async.required_suffix = Async

# Ignore StyleCop SA1600 (Elements should be documented)
dotnet_diagnostic.SA1600.severity = none
dotnet_diagnostic.SA1611.severity = none
dotnet_diagnostic.SA1602.severity = none
dotnet_diagnostic.SA1200.severity = none
