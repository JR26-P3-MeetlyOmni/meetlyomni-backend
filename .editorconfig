root = true

[*.cs]
indent_style = space
indent_size = 4
insert_final_newline = true
# charset = utf-8  # 留着注释即可

# ---- 不要自动加 this.（设为 silent，formatter 就不会改）----
dotnet_style_qualification_for_field = false:silent
dotnet_style_qualification_for_property = false:silent
dotnet_style_qualification_for_method = false:silent
dotnet_style_qualification_for_event = false:silent

# ---- using 排序 ----
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true

# ---- Prefer var（可选）----
csharp_style_var_for_built_in_types = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = true:suggestion

# ---- 命名规则：private readonly 字段用 _camelCase ----
dotnet_naming_rule.private_readonly_fields_with_underscore.severity = warning
dotnet_naming_rule.private_readonly_fields_with_underscore.symbols = private_readonly_fields
dotnet_naming_rule.private_readonly_fields_with_underscore.style = underscore_camel_style

dotnet_naming_symbols.private_readonly_fields.applicable_kinds = field
dotnet_naming_symbols.private_readonly_fields.applicable_accessibilities = private
dotnet_naming_symbols.private_readonly_fields.required_modifiers = readonly

dotnet_naming_style.underscore_camel_style.required_prefix = _
dotnet_naming_style.underscore_camel_style.capitalization = camel_case

# ---- 表达式成员（保持你原来的偏好）----
csharp_style_expression_bodied_methods = true:suggestion
csharp_style_expression_bodied_properties = true:suggestion

# ---- 其它语法偏好（保持你原来的）----
csharp_style_throw_expression = true:suggestion
csharp_style_conditional_delegate_call = true:suggestion
